<?xml version="1.0"?>
<data>
    <query id="get_unit">
      SELECT *
      FROM baseball.message_unit
      WHERE group_id = '{0}'
    </query>
	
	<query id="get_template">
		SELECT *
		FROM baseball.message_template
		WHERE group_id = '{0}'
		{1}
    </query>
	
	<query id="update_template_player_id">
		UPDATE baseball.message_template
		SET last_user = {1}
		WHERE group_id = '{0}'
		AND category = 'HITNAME';
		COMMIT; 
    </query>

</data>